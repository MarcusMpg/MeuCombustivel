<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuCombustivel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0" >
            <Label Text="Calcularoda de Combustival" HorizontalOptions="Center"  FontSize="35" TextColor="Purple" Padding="20"/>
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
            
            <Label Text="Preço do Etanol" Padding="0, 15"/>
            <Entry x:Name="txt_etanol" Placeholder=" R$" />
            <Label Text="Preço da Gasolina" Padding="0, 15"/>
            <Editor x:Name="txt_gasolina" Placeholder=" R$"/>

            <Button Text="Qual compensa mais ?" Margin="0,20,0,0" x:Name="btn_compensa" Clicked="btn_compensa_Clicked"/>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
